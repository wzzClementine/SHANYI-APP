  }
.content{
    margin:5px 0 5px 35px;
    font-size: 14px;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space:pre-wrap;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}
.pictures{
    height: 140rpx;
    padding-right: 5px;
    width: 140rpx;
}
.pic{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10px 10px 10px 30px;
}
.background{
    display: block;
    position: absolute;
    top: 0;
    width: 100%;
    background-color: #88b04b;
    height:19%;
    z-index: -999;
}
.club{
