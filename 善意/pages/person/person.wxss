}
.label{
    color: #fff;
    background-color: #ffa631;  
    font-size: 12px;
    padding: 2px 10px;
    margin: 1% 0 3% 3%;
    border-radius: 5px;
    white-space:nowrap;
}
.userinfo-nickname {
  color: #333;
  font-size:20px; 
  font-weight: 900;
}
.inputCon{
    width: 100%;
    border-bottom: 2px solid #999;
}
.data{
  flex-direction: column;
  align-items: center;
  margin-top: 30px;
}
.item{
  margin:0 10px;
  
  border-bottom: 1px solid #f1f1f1;
  justify-content: flex-start;
  padding: 10px 0;
}
.icon{
  margin-right: 10px;
  vertical-align:middle;
  width: 45rpx;
  height: 45rpx;

}
.icon01{
  margin-right: 10px;
  vertical-align:middle;
  width: 45rpx;
