 .navbar{ 
  display: flex;  
  background: #fff;  
}  
.navbar .item{
  padding: 0px 50px 3px 40px; 
  font-size: 15px;
  line-height: 80rpx; 
}  
.navbar .item.active{
  border-bottom-width: 2px;
  border-bottom-style: solid;  
  color: #FFCC00;
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}
.entry-header {
  padding: 28px 0;
  color: #ffffff;
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
}
.entry-header.entry-teamName {
  font-size: 12px;
  font-weight: 400;
}
.entry-header.entry-actName {
  font-size: 20px;
  font-weight: 600;
  line-height: 1.5;
}
.entry-tags {
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid #eceff1;
}
.entry-tags.tag {
  margin-right: 8px;
  padding: 2px 4px;
  font-size: 12px;
  font-weight: 600;
  border: 1px solid;
  border-radius: 4px;
}
.entry-context{
  font-size: 14px;
  white-space:pre-wrap;
}
.entry-attachments {
  margin-top: 8px;
}
.entry-attachments .attachment-quote {
  padding: 0 16px;
  font-size: 14px;
  color: #607d8b;
}
.entry-attachments .attachment-quote::before {
  content: "“";
  position: absolute;
  margin: -8px 0 0 -16px;
  font-size: 32px;
  font-family: "Helvetica Neue", "Helvetica", sans-serif;
  font-weight: 400;
  color: #b0bec5;
}
.entry-attachments .attachment-quote::after {
  content: "”";
  position: absolute;
  margin: -8px 0 0 4px;
  font-size: 32px;
  font-family: "Helvetica Neue", "Helvetica", sans-serif;
  font-weight: 400;
  color: #b0bec5;
}
.entry-attachments .attachment-image,
.entry-attachments .attachment-audio,
.entry-attachments .attachment-video {
  width: 100%;
}
.entry-meta {
  text-align: right;
  margin: 0 10px 5% 0;
  color: #b0bec5;
  font-size: 12px;
}
.butActive{
  margin: 5px 10%;
  background-color: #f9bf45;
  color: #fff;
}
